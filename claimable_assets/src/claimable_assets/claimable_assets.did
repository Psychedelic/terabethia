type ClaimableMessage = record { owner : text; msg_hash : text; token: text ; amount : nat };
type EthAddress = text;
type RepeatedCount = nat;
type AddResponse = variant { Ok ; Err : text };

service : {
  authorize : (principal) -> ();
  add : (owner: EthAddress, msg_hash: text, token: text, amount: nat) -> (AddResponse);
  get_all : (EthAddress) -> (vec record { ClaimableMessage ; RepeatedCount } );
  remove : (text) -> (bool);
}